<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/treatment_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:baselineAligned="true"
    android:paddingTop="5dp">
    
    <LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal">   
	    <TextView
	        android:id="@+id/treatment_list_item_title"
	        style="?android:textAppearanceMedium"
	        android:layout_width="0dip"
	        android:layout_height="match_parent"
	        android:gravity="center"
	        android:layout_marginLeft="5dp"
	        android:layout_weight="3"
	        android:textStyle="bold"
	        android:textColor="@color/DarkGreen" />
	    
	    <ImageView
	        android:id="@+id/treatment_list_item_classification_severity"
	        android:layout_width="57dp" 
	        android:layout_height="50dp" 
	        android:scaleType="fitCenter" 
	        android:paddingLeft="5dp" 
	        android:paddingRight="5dp" 
	        android:contentDescription="@string/classification_severity_image_content_assist"/>
	</LinearLayout>
    
    <TextView
        android:id="@+id/treatment_list_item_desc"
        style="?android:textAppearanceMedium"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:gravity="left"
        android:layout_marginLeft="5dp"
        android:layout_weight="3"
        android:textColor="@color/Black" />
 
</LinearLayout>
