<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SupportingLifePage"
    android:layout_height="match_parent"
    android:layout_width="match_parent"  >

<!-- ============================================================ -->
<!-- ASSESSMENT BREAD-CRUMB WIZARD UI -->
<!-- ASSESSMENT PAGE: GENERAL PATIENT DETAILS -->
<!-- ============================================================ -->
    <TextView style="@style/WizardPageTitle" />

    <ScrollView android:layout_height="match_parent"
    	android:layout_width="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical" >

			<!-- ============================================================ -->
			<!-- FIRST NAME -->
			<!-- ============================================================ --> 
            <TextView style="@style/WizardFormLabel"
                android:text="@string/general_patient_details_first_name" />

            <EditText android:id="@+id/general_patient_details_first_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:inputType="textCapWords"
                android:hint="@string/general_patient_details_first_name_hint"
                android:layout_marginBottom="16dp" />

			<!-- ============================================================ -->
			<!-- SURNAME -->
			<!-- ============================================================ -->             
            <TextView style="@style/WizardFormLabel"
                android:text="@string/general_patient_details_surname" />

            <EditText android:id="@+id/general_patient_details_surname"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:saveEnabled="false"
                android:inputType="textCapWords"
                android:layout_marginBottom="10dp"
                android:hint="@string/general_patient_details_surname_hint" />

			<!-- ============================================================ -->
			<!-- GENDER -->
			<!-- ============================================================ -->               
			
			<TextView
			    style="@style/WizardFormLabel"
			    android:layout_width="match_parent"
			    android:layout_height="match_parent"
			    android:layout_gravity="bottom"
			    android:text="@string/general_patient_details_radio_gender" />
			
			<RadioGroup
			    android:id="@+id/general_patient_details_radio_gender"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="horizontal" >

			    <RadioButton
			        android:id="@+id/general_patient_details_radio_gender_male"
			        android:layout_width="112dp"
			        android:layout_height="wrap_content"
			        android:layout_weight="0.67"
			        android:checked="false"
			        android:text="@string/general_patient_details_radio_gender_male" />

			    <RadioButton
			        android:id="@+id/general_patient_details_radio_gender_female"
			        android:layout_width="118dp"
			        android:layout_height="wrap_content"
			        android:layout_gravity="top"
			        android:layout_weight="0.32"
			        android:checked="false"
			        android:text="@string/general_patient_details_radio_gender_female" />

			</RadioGroup>
			   
        </LinearLayout>
    </ScrollView>
</LinearLayout>
