<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<TextView
	    android:id="@+id/radio_group_item_label_id"
	    style="@style/WizardFormLabel"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_gravity="bottom" />
	
	<RadioGroup
		android:id="@+id/radio_group_item_id"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="horizontal" >

		<RadioButton
			android:id="@+id/radio_group_item_radio_button_yes"
			android:layout_width="112dp"
			android:layout_height="wrap_content"
			android:layout_weight="0.67"
			android:checked="false"
			android:text="@string/assessment_wizard_radio_yes" />

		<RadioButton
			android:id="@+id/radio_group_item_radio_button_no"
			android:layout_width="118dp"
			android:layout_height="wrap_content"
			android:layout_gravity="top"
			android:layout_weight="0.32"
			android:checked="false"
			android:text="@string/assessment_wizard_radio_no" />
	</RadioGroup>
</RelativeLayout>
