<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/classification_list_item"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:orientation="horizontal"
    android:baselineAligned="true"
    android:paddingTop="12dp"
    android:paddingBottom="12dp">
    
    <TextView
        android:id="@+id/classification_list_item_label"
        style="?android:textAppearanceMedium"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:gravity="left|center_vertical"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="3dp"
        android:layout_weight="3"
        android:textStyle="bold"
	    android:textColor="@color/DarkGreen" />

    <ImageView
        android:id="@+id/classification_list_item_classification_severity"
        android:layout_width="60dp" 
        android:layout_height="60dp" 
        android:scaleType="fitCenter" 
        android:paddingLeft="10dp" 
        android:paddingRight="10dp" 
        android:contentDescription="@string/imci_classification_severity_image_content_assist"/>
</LinearLayout>
