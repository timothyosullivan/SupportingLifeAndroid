<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SupportingLifePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- ============================================================ -->
    <!-- ASSESSMENT BREAD-CRUMB WIZARD UI 							  -->
    <!-- CCM ASSESSMENT PAGE: ASK ASSESSMENT				  		  -->
    <!-- ============================================================ -->
 
    <TextView style="@style/WizardPageTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical" >

            <!-- ============================================================ -->
	        <!-- WHAT ARE THE CHILD'S PROBLEMS								  -->
	        <!-- ============================================================ -->
	
			<TextView
				style="@style/AssessmentFormLabel"
				android:text="@string/ccm_ask_assessment_problems_label" />
	
			<EditText
				android:id="@+id/ccm_ask_assessment_problems"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:gravity="top|left"
				android:inputType="textMultiLine"
				android:lines="3"
				android:saveEnabled="false"
				android:scrollHorizontally="false"
				android:hint="@string/ccm_ask_assessment_problems_hint" />
	            
			<LinearLayout
				android:id="@+id/ccm_ask_assessment_animated_top_level_view"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:animateLayoutChanges="true"
				android:orientation="vertical">
            	
            	<!-- ============================================================ -->
            	<!-- COUGH 													  -->
            	<!-- ============================================================ -->
                <LinearLayout
					android:id="@+id/ccm_ask_assessment_view_cough"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
		            <TextView
		                style="@style/AssessmentFormLabel"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_gravity="bottom"
		                android:text="@string/ccm_ask_assessment_radio_cough_label" />
		
		            <RadioGroup
		                android:id="@+id/ccm_ask_assessment_radio_cough"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal" >
		
		                <RadioButton
		                    android:id="@+id/ccm_ask_assessment_radio_cough_yes"
		                    android:layout_weight="0.67"
		                    android:text="@string/assessment_wizard_radio_yes" />
		
		                <RadioButton
		                    android:id="@+id/ccm_ask_assessment_radio_cough_no"
		                    android:layout_weight="0.33"
		                    android:text="@string/assessment_wizard_radio_no" />
		            </RadioGroup>
            	</LinearLayout>
            	
				<!-- ============================================================ -->
				<!-- FOR HOW LONG? (COUGH DURATION) -->
				<!-- ============================================================ -->
				<LinearLayout
					android:id="@+id/ccm_ask_assessment_view_cough_duration"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="30dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/ccm_ask_assessment_cough_duration_label"
						style="@style/AssessmentFormLabel"
						android:text="@string/ccm_ask_assessment_cough_duration_label" />
			
			            <EditText
			                android:id="@+id/ccm_ask_assessment_cough_duration"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_marginBottom="10dp"
			                android:inputType="number"
			                android:hint="@string/ccm_ask_assessment_cough_duration_hint"/>
				</LinearLayout>

            	<!-- ============================================================ -->
            	<!-- DIARRHOEA 													  -->
            	<!-- ============================================================ -->
                <LinearLayout
					android:id="@+id/ccm_ask_assessment_view_diarrhoea"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">
		            <TextView
		                style="@style/AssessmentFormLabel"
		                android:layout_width="match_parent"
		                android:layout_height="match_parent"
		                android:layout_gravity="bottom"
		                android:text="@string/ccm_ask_assessment_radio_diarrhoea_label" />
		
		            <RadioGroup
		                android:id="@+id/ccm_ask_assessment_radio_diarrhoea"
		                android:layout_width="match_parent"
		                android:layout_height="wrap_content"
		                android:orientation="horizontal" >
		
		                <RadioButton
		                    android:id="@+id/ccm_ask_assessment_radio_diarrhoea_yes"
		                    android:layout_weight="0.67"
		                    android:text="@string/assessment_wizard_radio_yes" />
		
		                <RadioButton
		                    android:id="@+id/ccm_ask_assessment_radio_diarrhoea_no"
		                    android:layout_weight="0.33"
		                    android:text="@string/assessment_wizard_radio_no" />
		            </RadioGroup>
            	</LinearLayout>
            	
				<!-- ============================================================ -->
				<!-- FOR HOW LONG? (DIARRHOEA DURATION) -->
				<!-- ============================================================ -->
				<LinearLayout
					android:id="@+id/ccm_ask_assessment_view_diarrhoea_duration"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:paddingLeft="30dp"
					android:orientation="vertical">
					<TextView
						android:id="@+id/ccm_ask_assessment_diarrhoea_duration_label"
						style="@style/AssessmentFormLabel"
						android:text="@string/ccm_ask_assessment_diarrhoea_duration_label" />
			
			            <EditText
			                android:id="@+id/ccm_ask_assessment_diarrhoea_duration"
			                android:layout_width="match_parent"
			                android:layout_height="wrap_content"
			                android:layout_marginBottom="10dp"
			                android:inputType="number"
			                android:hint="@string/ccm_ask_assessment_diarrhoea_duration_hint"/>
				</LinearLayout>				
			
					
			</LinearLayout> <!-- end of animated top-level view -->
        </LinearLayout>
    </ScrollView>
</LinearLayout>