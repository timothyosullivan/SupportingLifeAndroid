<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SupportingLifePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- ============================================================ -->
    <!-- ASSESSMENT BREAD-CRUMB WIZARD UI 							  -->
    <!-- CCM ASSESSMENT PAGE: ASK ASSESSMENT				  		  -->
    <!-- ============================================================ -->
 
    <TextView style="@style/WizardPageTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical" >

            <!-- ============================================================ -->
	        <!-- WHAT ARE THE CHILD'S PROBLEMS								  -->
	        <!-- ============================================================ -->
	
			<TextView
				style="@style/AssessmentFormLabel"
				android:text="@string/ccm_ask_assessment_problems_label" />
	
			<EditText
				android:id="@+id/ccm_ask_assessment_problems"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:gravity="top|left"
				android:inputType="textMultiLine"
				android:lines="3"
				android:saveEnabled="false"
				android:scrollHorizontally="false"
				android:hint="@string/ccm_ask_assessment_problems_hint" />
	            
            <!-- ============================================================ -->
            <!-- COUGH 													  -->
            <!-- ============================================================ -->

            <TextView
                style="@style/AssessmentFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/ccm_ask_assessment_radio_cough_label" />

            <RadioGroup
                android:id="@+id/ccm_ask_assessment_radio_cough"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ccm_ask_assessment_radio_cough_yes"
                    android:layout_weight="0.67"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/ccm_ask_assessment_radio_cough_no"
                    android:layout_weight="0.33"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>
            

        </LinearLayout>
    </ScrollView>

</LinearLayout>