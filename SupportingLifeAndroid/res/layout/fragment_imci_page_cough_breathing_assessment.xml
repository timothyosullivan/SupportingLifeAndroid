<LinearLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/SupportingLifePage"
	android:layout_height="match_parent"
	android:layout_width="match_parent">

<!-- ============================================================ -->
<!-- ASSESSMENT BREAD-CRUMB WIZARD UI -->
<!-- ASSESSMENT PAGE: COUGH / BREATHING ASSESSMENT -->
<!-- ============================================================ -->
	<TextView style="@style/WizardPageTitle"/>
	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">
		<LinearLayout
		    android:id="@+id/breathing_assessment_cough_difficult_breathing_animated_view"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:animateLayoutChanges="true"
			android:orientation="vertical">

			<!-- ============================================================ -->
			<!-- COUGH OR DIFFICULT BREATHING RADIO BUTTON GROUP -->
			<!-- ============================================================ -->
			<LinearLayout
				android:id="@+id/breathing_assessment_view_cough_difficult_breathing"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					style="@style/WizardFormLabel"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:layout_gravity="bottom"
					android:text="@string/breathing_assessment_radio_cough_difficult_breathing"/>
				<RadioGroup
					android:id="@+id/breathing_assessment_radio_cough_difficult_breathing"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal">
				<RadioButton
					android:id="@+id/breathing_assessment_radio_cough_difficult_breathing_yes"
					android:layout_weight="0.67"
					android:text="@string/assessment_wizard_radio_yes"/>
				<RadioButton
					android:id="@+id/breathing_assessment_radio_cough_difficult_breathing_no"
					android:layout_weight="0.33"
					android:text="@string/assessment_wizard_radio_no"/>
				</RadioGroup>
			</LinearLayout>
	        <!-- ============================================================ -->
	        <!-- FOR HOW LONG? (COUGH / DIFFICULT BREATHING DURATION) -->
	        <!-- ============================================================ -->
            <LinearLayout
				android:id="@+id/breathing_assessment_view_cough_duration"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:paddingLeft="30dp"
				android:orientation="vertical">
				<TextView
					android:id="@+id/breathing_assessment_cough_duration_label"
					style="@style/WizardFormLabel"
					android:text="@string/breathing_assessment_cough_duration"/>
				<EditText
					android:id="@+id/breathing_assessment_cough_duration"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginBottom="10dp"
					android:inputType="number"
					android:hint="@string/breathing_assessment_cough_duration_hint"/>
			</LinearLayout>
           
            <!-- ============================================================ -->
            <!-- BREATHS PER MINUTE -->
            <!-- ============================================================ -->
			<TextView
				android:id="@+id/breathing_assessment_breaths_per_minute_label"
				style="@style/WizardFormLabel"
				android:text="@string/breathing_assessment_breaths_per_minute"/>
			<EditText
				android:id="@+id/breathing_assessment_breaths_per_minute"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginBottom="10dp"
				android:inputType="number"
				android:hint="@string/breathing_assessment_breaths_per_minute_hint"/>

			<!-- ============================================================ -->
			<!-- CHEST INDRAWING RADIO BUTTON GROUP -->
			<!-- ============================================================ -->
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<TextView
					style="@style/WizardFormLabel"
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:layout_gravity="bottom"
					android:text="@string/breathing_assessment_radio_chest_indrawing"/>
			</LinearLayout>
			<RadioGroup
				android:id="@+id/breathing_assessment_radio_chest_indrawing"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<RadioButton
					android:id="@+id/breathing_assessment_radio_chest_indrawing_yes"
					android:layout_weight="0.67"
					android:text="@string/assessment_wizard_radio_yes"/>
				<RadioButton
					android:id="@+id/breathing_assessment_radio_chest_indrawing_no"
					android:layout_weight="0.33"
					android:text="@string/assessment_wizard_radio_no"/>
			</RadioGroup>

			<!-- ============================================================ -->
			<!-- STRIDOR RADIO BUTTON GROUP -->
			<!-- ============================================================ -->
			<TextView
				style="@style/WizardFormLabel"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="bottom"
				android:text="@string/breathing_assessment_radio_stridor"/>
			<RadioGroup
				android:id="@+id/breathing_assessment_radio_stridor"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">
				<RadioButton
					android:id="@+id/breathing_assessment_radio_stridor_yes"
					android:layout_weight="0.67"
					android:text="@string/assessment_wizard_radio_yes"/>
				<RadioButton
					android:id="@+id/breathing_assessment_radio_stridor_no"
					android:layout_weight="0.33"
					android:text="@string/assessment_wizard_radio_no"/>
			</RadioGroup>
		</LinearLayout><!-- end of cough / difficult breathing animated view -->
	</ScrollView>
</LinearLayout>