<?xml version="1.0" encoding="utf-8"?>
<!-- ============================================================ -->
<!-- DASHBOARD SCREEN -->
<!-- ============================================================ -->

<GridLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/SupportingLifePage"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:layout_weight="1"
	android:columnCount="4"
	android:orientation="vertical"
	android:padding="6dip">

	<!-- ============================================================ -->
	<!-- E-IMCI ASSESSMENT BUTTON -->
	<!-- ============================================================ -->

	<Button
		android:id="@+id/dashboard_assessment_button"
		android:layout_width="132dp"
		android:layout_height="90dp"
		android:layout_column="0"
		android:layout_gravity="left|center_vertical"
		android:layout_row="9"
		android:background="@drawable/dashboard_button"
		android:onClick="onClickDashboardButton"
		android:text="@string/dashboard_assessment_button"
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="@color/DarkGreen" />

	<!-- ============================================================ -->
	<!-- E-IMCI ASSESSMENT WIZARD BUTTON -->
	<!-- ============================================================ -->

	<Button
		android:id="@+id/dashboard_assessment_wizard_button"
		android:layout_width="132dp"
		android:layout_height="90dp"
		android:layout_column="0"
		android:layout_gravity="left|top"
		android:layout_row="9"
		android:background="@drawable/dashboard_button"
		android:onClick="onClickDashboardButton"
		android:text="@string/dashboard_assessment_wizard_button"
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="@color/DarkGreen" />

	<!-- ============================================================ -->
	<!-- ABOUT BUTTON -->
	<!-- ============================================================ -->

	<Button
		android:id="@+id/dashboard_about_button"
		android:layout_width="132dp"
		android:layout_height="90dp"
		android:layout_column="3"
		android:layout_gravity="right|top"
		android:layout_row="9"
		android:background="@drawable/dashboard_button"
		android:onClick="onClickDashboardButton"
		android:text="@string/dashboard_about_button"
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="@color/DarkGreen" />

	<!-- ============================================================ -->
	<!-- TRAINING BUTTON -->
	<!-- ============================================================ -->

	<Button
		android:id="@+id/dashboard_training_button"
		android:layout_width="132dp"
		android:layout_height="90dp"
		android:layout_column="3"
		android:layout_gravity="right|center_vertical"
		android:layout_row="9"
		android:background="@drawable/dashboard_button"
		android:onClick="onClickDashboardButton"
		android:text="@string/dashboard_training_button"
		android:textStyle="bold"
		android:textSize="18sp"
		android:textColor="@color/DarkGreen" />
</GridLayout>