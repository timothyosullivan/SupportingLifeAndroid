<?xml version="1.0" encoding="utf-8"?>
<!-- ============================================================ -->
<!-- DASHBOARD SCREEN -->
<!-- ============================================================ -->
   
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	style="@style/SupportingLifePage"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:orientation="vertical"
	android:padding="6dip">

	 <RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<!-- ============================================================ -->
		<!-- >E-IMCI ASSESSMENT WIZARD BUTTON -->
		<!-- ============================================================ -->		
		<Button android:id="@+id/ic_dashboard_assessment_button"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_marginTop="20dp" 
			android:layout_marginLeft="25dp"
			android:background="@drawable/ic_dashboard_assessment_button"
			android:onClick="onClickDashboardButton" />
		
		<TextView android:id="@+id/dashboard_assessment_wizard_button_text"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_alignParentLeft="true" 
		    android:layout_below="@+id/ic_dashboard_assessment_button"
		    android:layout_marginTop="2dp" 
		    android:layout_marginLeft="50dp" 
		    android:text="@string/dashboard_assessment_wizard_button"
		    android:textColor="@color/DarkGreen" 
		    android:textSize="18sp" 
		    android:textStyle="bold"/>	

		<!-- ============================================================ -->
		<!-- HSA PROFILE BUTTON -->
		<!-- ============================================================ -->
		<Button
		    android:id="@+id/dashboard_hsa_profile_button"
		    android:layout_width="90dp"
		    android:layout_height="90dp"
		    android:layout_marginTop="20dp" 
			android:layout_marginRight="25dp" 
		    android:layout_alignParentRight="true"
		    android:background="@drawable/ic_dashboard_profile_button"
		    android:onClick="onClickDashboardButton" />
		
		<TextView android:id="@+id/dashboard_hsa_profile_text"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_alignParentRight="true" 
		    android:layout_below="@+id/dashboard_hsa_profile_button"
		    android:layout_marginRight="42dp" 
		    android:text="@string/dashboard_hsa_profile_button"
		    android:textColor="@color/DarkGreen" 
		    android:textSize="18sp" 
		    android:textStyle="bold"/>
	
	</RelativeLayout>
 
	<View
		android:id="@+id/divider"
		android:layout_width="match_parent"
		android:layout_height="10dp" />

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">
		
		<!-- ============================================================ -->
		<!-- ABOUT BUTTON -->
		<!-- ============================================================ -->
		
		<Button android:id="@+id/dashboard_about_button"
			android:layout_width="90dp"
			android:layout_height="90dp"
			android:layout_marginTop="20dp" 
			android:layout_marginLeft="25dp"
			android:background="@drawable/ic_dashboard_about_button"
			android:onClick="onClickDashboardButton" />
		
		<TextView android:id="@+id/dashboard_about_button_text"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_alignParentLeft="true" 
		    android:layout_below="@+id/dashboard_about_button"
		    android:layout_marginTop="2dp" 
		    android:layout_marginLeft="50dp" 
		    android:text="@string/dashboard_about_button"
		    android:textColor="@color/DarkGreen" 
		    android:textSize="18sp"
		    android:textStyle="bold"/>
	
		<!-- ============================================================ -->
		<!-- SEARCH BUTTON -->
		<!-- ============================================================ -->
		<Button
		    android:id="@+id/dashboard_search_button"
		    android:layout_width="90dp"
		    android:layout_height="90dp"
		    android:layout_marginTop="20dp" 
			android:layout_marginRight="25dp" 
		    android:layout_alignParentRight="true"
		    android:background="@drawable/ic_dashboard_search_button"
		    android:onClick="onClickDashboardButton" />
		
		<TextView android:id="@+id/dashboard_search_text"
		    android:layout_width="wrap_content" 
		    android:layout_height="wrap_content" 
		    android:layout_alignParentRight="true" 
		    android:layout_below="@+id/dashboard_search_button"
		    android:layout_marginRight="42dp" 
		    android:text="@string/dashboard_search_button"
		    android:textColor="@color/DarkGreen" 
		    android:textSize="18sp" 
		    android:textStyle="bold"/>		
	</RelativeLayout>
	
	<!-- ============================================================ -->
	<!-- TRAINING BUTTON -->
	<!-- ============================================================ -->
			
</LinearLayout>