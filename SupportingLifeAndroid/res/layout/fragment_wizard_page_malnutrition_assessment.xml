<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SupportingLifePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- ============================================================ -->
    <!-- ASSESSMENT BREAD-CRUMB WIZARD UI -->
    <!-- ASSESSMENT PAGE: MALNUTRITION AND ANAEMIA ASSESSMENT -->
    <!-- ============================================================ -->

    <TextView style="@style/WizardPageTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical" >

            <!-- ============================================================ -->
            <!-- OEDEMA RADIO BUTTON GROUP -->
            <!-- ============================================================ -->

            <TextView
                style="@style/WizardFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/malnutrition_assessment_radio_oedema" />

            <RadioGroup
                android:id="@+id/malnutrition_assessment_radio_oedema"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/malnutrition_assessment_radio_oedema_yes"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/malnutrition_assessment_radio_oedema_no"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.32"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>

            <!-- ============================================================ -->
            <!-- WEIGHT FOR AGE RADIO BUTTON GROUP -->
            <!-- ============================================================ -->

            <TextView
                style="@style/WizardFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/malnutrition_assessment_radio_weight_for_age" />

            <RadioGroup
                android:id="@+id/malnutrition_assessment_radio_weight_for_age"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/malnutrition_assessment_radio_weight_for_age_yes"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/malnutrition_assessment_radio_weight_for_age_no"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.32"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>

            <!-- ============================================================ -->
            <!-- VISIBLE SEVERE WASTING RADIO BUTTON GROUP -->
            <!-- ============================================================ -->

            <TextView
                style="@style/WizardFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/malnutrition_assessment_radio_visible_severe_wasting" />

            <RadioGroup
                android:id="@+id/malnutrition_assessment_radio_visible_severe_wasting"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/malnutrition_assessment_radio_visible_severe_wasting_yes"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/malnutrition_assessment_radio_visible_severe_wasting_no"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.32"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>
        </LinearLayout>
    </ScrollView>

</LinearLayout>