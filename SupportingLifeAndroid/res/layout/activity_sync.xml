<?xml version="1.0" encoding="utf-8"?>
<!-- ============================================================ -->
<!-- SYNC SCREEN -->
<!-- ============================================================ -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >
	
    <TextView android:layout_width="fill_parent"
        android:layout_height="wrap_content"
		android:text="@string/synchronisation_category"
		style="?android:attr/listSeparatorTextViewStyle"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp" />
 
	<TextView
		android:id="@+id/training_tutorial_title_label"
		style="?android:attr/listSeparatorTextViewStyle"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:text="@string/sync_now_instruction" />
		
	<!-- ============================================================ -->
	<!-- SYNCHRONISATION BUTTON -->
	<!-- ============================================================ -->
	
	<Button
		android:id="@+id/sync_button"
		style="@style/SyncScreenTextAppearanceFinish" 
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_marginLeft="20dp"
		android:layout_marginRight="20dp"
		android:background="@drawable/synchronisation_button"
		android:text="@string/sync_screen_sync_button"/>
 
</LinearLayout>
