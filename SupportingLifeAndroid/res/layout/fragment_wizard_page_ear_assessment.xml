<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/SupportingLifePage"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- ============================================================ -->
    <!-- ASSESSMENT BREAD-CRUMB WIZARD UI -->
    <!-- ASSESSMENT PAGE: EAR ASSESSMENT -->
    <!-- ============================================================ -->

    <TextView style="@style/WizardPageTitle" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="218dp"
            android:orientation="vertical" >

            <!-- ============================================================ -->
            <!-- EAR PROBLEM RADIO BUTTON GROUP -->
            <!-- ============================================================ -->

            <TextView
                style="@style/WizardFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/ear_assessment_radio_ear_problem" />

            <RadioGroup
                android:id="@+id/ear_assessment_radio_ear_problem"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ear_assessment_radio_ear_problem_yes"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/ear_assessment_radio_ear_problem_no"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.32"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>

            <!-- ============================================================ -->
            <!-- EAR PAIN RADIO BUTTON GROUP -->
            <!-- ============================================================ -->

            <TextView
                style="@style/WizardFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/ear_assessment_radio_ear_pain" />

            <RadioGroup
                android:id="@+id/ear_assessment_radio_ear_pain"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ear_assessment_radio_ear_pain_yes"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/ear_assessment_radio_ear_pain_no"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.32"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>

            <!-- ============================================================ -->
            <!-- EAR DISCHARGE RADIO BUTTON GROUP -->
            <!-- ============================================================ -->

            <TextView
                style="@style/WizardFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/ear_assessment_radio_ear_discharge" />

            <RadioGroup
                android:id="@+id/ear_assessment_radio_ear_discharge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ear_assessment_radio_ear_discharge_yes"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/ear_assessment_radio_ear_discharge_no"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.32"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>
            
			<!-- ============================================================ -->
			<!-- FOR HOW LONG? (EAR DISCHARGE DURATION) -->
			<!-- ============================================================ -->
	
			<TextView
				android:id="@+id/ear_assessment_ear_discharge_duration_label"
				style="@style/WizardFormLabel"
				android:text="@string/ear_assessment_ear_discharge_duration" />
	
	            <EditText
	                android:id="@+id/ear_assessment_ear_discharge_duration"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:layout_marginBottom="10dp"
	                android:inputType="number" />
            
            <!-- ============================================================ -->
            <!-- TENDER SWELLING BEHIND THE EAR RADIO BUTTON GROUP -->
            <!-- ============================================================ -->

            <TextView
                style="@style/WizardFormLabel"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="bottom"
                android:text="@string/ear_assessment_radio_tender_swelling" />

            <RadioGroup
                android:id="@+id/ear_assessment_radio_tender_swelling"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <RadioButton
                    android:id="@+id/ear_assessment_radio_tender_swelling_yes"
                    android:layout_width="112dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.67"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_yes" />

                <RadioButton
                    android:id="@+id/ear_assessment_radio_tender_swelling_no"
                    android:layout_width="118dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="top"
                    android:layout_weight="0.32"
                    android:checked="false"
                    android:text="@string/assessment_wizard_radio_no" />
            </RadioGroup>
	            
        </LinearLayout>
    </ScrollView>

</LinearLayout>