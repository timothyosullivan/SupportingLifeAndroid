		<SymptomRule rule="ANY_SYMPTOM">
			<Symptom value="low malaria risk">imci_fever_assessment_malaria_risk_symptom_id</Symptom>	<!-- Malaria Risk : Low Malaria Risk -->
		</SymptomRule>
	</Classification>

	<!-- ============================================================ -->
	<!-- LOW MALARIA RISK (SUB-CLASSIFICATION OF FEVER) 			  -->
	<!-- ============================================================ -->
	<!-- ============================================================ -->
	<!-- Classification: Fever - Malaria Unlikely    				  -->
	<!-- Type: LOW											  		  -->
	<!-- Symptoms: Fever 					  						  -->
	<!-- 		    AND 										  	  -->
	<!--  		   (Runny Nose present	  							  -->
	<!-- 			OR 												  -->
	<!-- 		    Measles present			  						  -->
	<!-- 			OR 												  -->
	<!-- 		   Other cause of Fever present?(Open Question Here)) -->
	<!-- 			AND 											  -->
	<!-- 		   Low Malaria Risk Area  							  -->
	<!-- ============================================================ -->
	<Classification>
		<Category>low_malaria_risk</Category>
		<Name>Fever - Malaria Unlikely</Name>
		<Type>LOW</Type>
		<Priority>3</Priority>
		<SymptomRule rule="ANY_SYMPTOM">
			<Symptom value="history">imci_fever_assessment_fever_symptom_id</Symptom>					<!-- Fever : History -->
			<Symptom value="feels hot">imci_fever_assessment_fever_symptom_id</Symptom>					<!-- Fever : Feels Hot -->
			<Symptom value="high temperature">imci_fever_assessment_fever_symptom_id</Symptom>			<!-- Fever : High Temperature -->
		</SymptomRule>
		<SymptomRule rule="ANY_SYMPTOM">
			<Symptom value="yes">imci_fever_assessment_runny_nose_symptom_id</Symptom> 					<!-- Runny Nose : YES -->
			<Symptom value="yes">imci_fever_assessment_measles_symptom_id</Symptom> 					<!-- Measles : YES -->
