	<!-- ============================================================ -->
	<!-- LOW MALARIA RISK (SUB-CLASSIFICATION OF FEVER) 			  -->
	<!-- ============================================================ -->
	<!-- ============================================================ -->
	<!-- Classification: Malaria  			  						  -->
	<!-- Type: MODERARTE											  -->
	<!-- Symptoms: Fever 					  						  -->
	<!-- 		    AND 										  	  -->
	<!--  		   No Runny Nose		  							  -->
	<!-- 			AND 											  -->
	<!-- 		   No Measles			  							  -->
	<!-- 			AND 											  -->
	<!-- 		   No other cause of Fever?(Open Question Here) 	  -->
	<!-- 			AND 											  -->
	<!-- 		   Low Malaria Risk Area  							  -->
	<!-- ============================================================ -->
	<Classification>
