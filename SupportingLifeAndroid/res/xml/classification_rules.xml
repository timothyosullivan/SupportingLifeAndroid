<?xml version="1.0" encoding="utf-8"?>
<!-- ============================================================ -->
<!-- CLASSIFICATION RULES -->
<!-- ============================================================ -->

<!-- Note: The <Symptom> element string must match a string 	  -->
<!-- 	   element in the 'symptom_ids.xml' file (otherwise an 	  -->
<!--       will be thrown at runtime when parsing the  			  -->
<!--       'classification_rules.xml' document 					  -->

<ClassificationRules>
	<!-- ============================================================ -->
	<!-- COUGH OR DIFFICULT BREATHING -->
	<!-- ============================================================ -->
	<Classification>
		<Category>cough_difficult_breathing</Category>
		<Name>Severe Pneumonia or Very Severe Disease</Name>
		<Type>SEVERE</Type>
		<SymptomRule rule="ANY_SYMPTOM">
			<Symptom>breathing_assessment_chest_indrawing_symptom_id</Symptom>
			<!-- Any general danger sign -->
			<Symptom>general_danger_signs_drink_breastfeed_symptom_id</Symptom>
			<Symptom>general_danger_signs_vomits_everything_symptom_id</Symptom>
			<Symptom>general_danger_signs_convulsions_symptom_id</Symptom>
		</SymptomRule>
	</Classification>

	<!-- ============================================================ -->
	<!-- DEHYDRATION -->
	<!-- ============================================================ -->
	<Classification>
		<Category>dehydration</Category>
		<Name>Severe Dehydration</Name>
		<Type>SEVERE</Type>
		<SymptomRule rule="TWO_SYMPTOMS_REQUIRED">
			<Symptom>diarrhoea_assessment_diarrhoea_symptom_id</Symptom>
			<Symptom>diarrhoea_assessment_blood_stools_symptom_id</Symptom>
		</SymptomRule>
	</Classification>
</ClassificationRules>